<production_line>

   <unit>
    <lift_module modID="LM001">
      <name>Starter Pallet Lift LM1</name>
      <description>Lifts the pallets from the bottom conveyor up to the Starter module</description>
      <conveyor type="BELT" feed="in">
        <description>Pallet Conveyor (bottom)</description>
      </conveyor>
      <conveyor type="BELT" feed="out">
        <description>Pallet Conveyor (top)</description>
      </conveyor>
      <chassis type="SAFETY" width="500" height="1200" length="700">
        <sensor type="OPTIC"></sensor>
      </chassis>
      <sensor type="INDUCTIVE"></sensor>
      <sensor type="OPTIC"></sensor>
    </lift_module>
  </unit>

  <unit>
    <starter_module modID="SM001">
      <name>Starter Module SM1</name>
      <description>Shares the pallets to three conveyors</description>
      <conveyor type="BELT" feed="forward">
        <description>Pallet Conveyor (middle)</description>
      </conveyor>
      <conveyor type="BELT" feed="forward">
        <description>Pallet Conveyor (feed1)</description>
      </conveyor>
      <conveyor type="BELT" feed="forward">
        <description>Pallet Conveyor (feed2)</description>
      </conveyor>
      <crossing/>
      <crossing/>
      <crossing/>
      <sensor type="INDUCTIVE"></sensor>
      <sensor type="OPTIC"></sensor>
    </starter_module>
  </unit>

  <unit>
    <workstation modID="WM001">
      <name>Workstation WM1</name>
      <description>Contains left and right work posts</description>
      <conveyor type="BELT" feed="forward">
        <description>Pallet Conveyor (middle)</description>
      </conveyor>
      <conveyor type="BELT" feed="forward">
        <description>Pallet Conveyor (left)</description>
      </conveyor>
      <conveyor type="BELT" feed="forward">
        <description>Pallet Conveyor (right)</description>
      </conveyor>
      <crossing/>
      <crossing/>
      <crossing/>
      <sensor type="INDUCTIVE"></sensor>
      <sensor type="OPTIC"></sensor>
    </workstation>
  </unit>

  <unit>
    <lift_module modID="LM002">
      <name>Line End Pallet Lift LM2</name>
      <description>Moves the pallets from the top conveyor down to the bottom conveyor</description>
      <conveyor type="BELT" feed="in">
        <description>Pallet Conveyor (bottom)</description>     
      </conveyor>
      <conveyor type="BELT" feed="out">
        <description>Pallet Conveyor (top)</description>
      </conveyor>
      <chassis type="SAFETY" width="500" height="1200" length="700">
        <sensor type="OPTIC"></sensor>
      </chassis>
      <sensor type="INDUCTIVE"></sensor>
      <sensor type="OPTIC"></sensor>
    </lift_module>
  </unit>

</production_line>
